{
    "compilerOptions": {
        "outDir": "build",
        "module": "commonjs",
        "lib": ["es5"],
        "target": "es2015",
        "declaration": true,
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "skipLibCheck": true
    },
    "include": [
      "src/**/*.ts"
    ]
}
